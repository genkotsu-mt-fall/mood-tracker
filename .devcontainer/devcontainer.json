{
    "name": "Mood-Tracker",
    "dockerComposeFile": ["docker-compose.yml", "docker-compose.override.yml"],
    "service": "app",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "bradlc.vscode-tailwindcss",
                "dbaeumer.vscode-eslint",
                "esbenp.prettier-vscode",
                "yoavbls.pretty-ts-errors",
                "orta.vscode-jest",
                "prisma.prisma",
                "mikestead.dotenv",
                "vivaxy.vscode-conventional-commits",
            ],
            "settings": {
                "editor.formatOnSave": true,
                "[typescript]": {
                    "editor.defaultFormatter": "esbenp.prettier-vscode"
                },
                "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
                "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
                "[javascriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
                "[handlebars]": {
                    "editor.formatOnSave": false
                },
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "explicit"
                }
            }
        }
    },
    "forwardPorts": [3000, 5173, 9323],
    // "postCreateCommand": "bun install --cwd backend && bun install --cwd frontend"
    // "postCreateCommand": "npm install --prefix backend && npm install --prefix frontend"
    // "postCreateCommand": "safe-chain npm ci --workspaces --ignore-scripts && npm -w @genkotsu-mt-fall/shared run build && npm -w backend exec prisma generate"
    "postCreateCommand": "aikido-npm ci --workspaces --ignore-scripts && aikido-npm -w @genkotsu-mt-fall/shared run build && aikido-npm -w backend exec prisma generate"
}